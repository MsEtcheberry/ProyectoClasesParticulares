@model IEnumerable<ProyectoNT.Models.Materia>

@{
    ViewData["Title"] = "Index";
}

<h1>Materias</h1>

<p>
    <a asp-action="Create">Agregar materia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idMateria">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idMateria">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.idMateria">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
